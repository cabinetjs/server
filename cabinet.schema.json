{
    "type": "object",
    "properties": {
        "dataSources": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": "string"
                            },
                            "boards": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "withArchive": {
                                "type": "boolean"
                            },
                            "filters": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "content": {
                                            "type": "string"
                                        },
                                        "caseSensitive": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "image-board"
                                ]
                            },
                            "name": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "url",
                            "boards",
                            "type",
                            "name"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "blogs": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "url": {
                                            "type": "string"
                                        },
                                        "boardUrl": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "url"
                                    ]
                                }
                            },
                            "withComments": {
                                "type": "boolean"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "naver-blog"
                                ]
                            },
                            "name": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "blogs",
                            "type",
                            "name"
                        ]
                    }
                ]
            }
        },
        "storage": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string",
                            "enum": [
                                "local"
                            ]
                        }
                    },
                    "required": [
                        "path",
                        "type"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "bucketName": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "endpoint": {
                            "type": "string"
                        },
                        "credentials": {
                            "type": "object",
                            "properties": {
                                "accessKeyId": {
                                    "type": "string"
                                },
                                "secretAccessKey": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "accessKeyId",
                                "secretAccessKey"
                            ]
                        },
                        "type": {
                            "type": "string",
                            "enum": [
                                "s3"
                            ]
                        }
                    },
                    "required": [
                        "bucketName",
                        "region",
                        "type"
                    ]
                }
            ]
        },
        "api": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "graphql"
                    ]
                },
                "port": {
                    "type": "number"
                },
                "endpoint": {
                    "type": "string"
                },
                "playground": {
                    "type": "boolean"
                }
            },
            "required": [
                "type",
                "port"
            ]
        },
        "crawlInterval": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "number"
                }
            ]
        },
        "storingConcurrency": {
            "type": "number"
        },
        "thumbnailPath": {
            "type": "string"
        }
    },
    "required": [
        "dataSources",
        "storage",
        "crawlInterval"
    ]
}
